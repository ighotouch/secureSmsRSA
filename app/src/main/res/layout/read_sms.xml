<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3B5998"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:padding="10px"
        android:text="Read Secure SMS"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="monospace" >
    </TextView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/read_encrypted_message_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_weight="0"
                android:text="Read Encrypted Message"

                />

            <TextView
                android:id="@+id/decrypted_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_weight="0"
                android:text="Please use the above button to select the message to be decrypted!"
                android:textAppearance="?android:attr/textAppearanceMedium"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>